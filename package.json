{
  "name": "chilamboli",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev --host",
    "build": "nuxt build",
    "postinstall": "nuxt prepare",
    "seed": "bun scripts/seed.ts > seed.sql",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 execute DB --local --file=./drizzle/0000_white_norrin_radd.sql",
    "db:seed:local": "bun run seed && wrangler d1 execute DB --local --file=seed.sql",
    "db:migrate:prod": "wrangler d1 execute DB --remote --file=./drizzle/0000_white_norrin_radd.sql",
    "db:seed:prod": "bun run seed && wrangler d1 execute DB --remote --file=seed.sql",
    "deploy": "nuxt build && wrangler pages deploy"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.953.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.38.3",
    "nanoid": "^5.1.6",
    "nuxt": "^3.13.0",
    "tailwind-merge": "^3.4.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.11.4",
    "@types/bcryptjs": "^3.0.0",
    "drizzle-kit": "^0.30.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.0",
    "wrangler": "^3.99.0"
  }
}