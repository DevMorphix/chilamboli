{
  "name": "chilamboli",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev --host",
    "build": "nuxt build",
    "postinstall": "nuxt prepare",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --remote",
    "db:seed": "bun scripts/seed.ts > scripts/seed.sql && wrangler d1 execute DB --remote --file=scripts/seed.sql",
    "db:reset": "bun scripts/reset-db.ts > scripts/reset.sql && wrangler d1 execute DB --remote --file=scripts/reset.sql && bun run db:migrate && bun run db:seed",
    "deploy": "nuxt build && wrangler pages deploy dist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.953.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.38.3",
    "nanoid": "^5.1.6",
    "nuxt": "^3.13.0",
    "resend": "^6.6.0",
    "tailwind-merge": "^3.4.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.11.4",
    "@react-email/render": "^2.0.0",
    "@types/bcryptjs": "^3.0.0",
    "drizzle-kit": "^0.30.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.0",
    "wrangler": "^3.99.0"
  }
}